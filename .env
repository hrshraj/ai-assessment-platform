# ===========================================
# AI Assessment Platform - Configuration
# ===========================================

# LLM Provider: "ollama" (local) or "groq" (cloud, free)
LLM_PROVIDER=ollama

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_CODING_MODEL=llama3

# Groq Configuration (for cloud deployment - FREE)
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant
GROQ_CODING_MODEL=llama-3.1-8b-instant

# Database
DATABASE_URL=sqlite:///./assessment.db
# For production: postgresql://user:pass@localhost:5432/assessment_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-hackathon-secret-key-change-in-prod
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Assessment Defaults
DEFAULT_MCQ_COUNT=10
DEFAULT_SUBJECTIVE_COUNT=5
DEFAULT_CODING_COUNT=3
DEFAULT_ASSESSMENT_DURATION_MINUTES=90
MAX_CODE_EXECUTION_TIME_SECONDS=10

# Anti-Cheat
PLAGIARISM_THRESHOLD=0.85
MIN_TIME_PER_QUESTION_SECONDS=5
RESUME_MISMATCH_THRESHOLD=0.4

# Embedding Model (for semantic similarity)
EMBEDDING_MODEL=all-MiniLM-L6-v2



AI_SERVICE_URL=https://ai-assessment-platform.onrender.com

DB_USER=neondb_owner
DB_PASSWORD=CHANGE_ME_IN_PROD
DB_URL=jdbc:postgresql://your-neon-host.neon.tech/neondb?sslmode=require

FRONTEND_URL=https://devscore-ai.vercel.app/

JWT_SECRET=CHANGE_ME_IN_PROD
